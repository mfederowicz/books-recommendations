<div class="bg-green-50 border border-green-200 rounded-md p-4 mb-4 toast-message" data-type="success">
  <div class="flex">
    <div class="flex-shrink-0">
      <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
    </div>
    <div class="ml-3 flex-1">
      <h3 class="text-sm font-medium text-green-800">{{ 'components.recommendations.success.title'|trans }}</h3>
      <div class="mt-2 text-sm text-green-700">
        <p>{{ 'components.recommendations.success.message'|trans }}</p>
      </div>
    </div>
    <div class="ml-auto pl-3">
      <div class="-mx-1.5 -my-1.5">
        <button type="button" class="inline-flex bg-green-50 rounded-md p-1.5 text-green-500 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-green-50 focus:ring-green-600 close-toast">
          <span class="sr-only">Dismiss</span>
          <svg class="h-3 w-3" fill="none" viewBox="0 0 20 20" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  // Automatyczne ukrycie toast po 5 sekundach
  setTimeout(function() {
    const toast = document.querySelector('.toast-message[data-type="success"]');
    if (toast) {
      toast.style.transition = 'opacity 0.5s ease-out';
      toast.style.opacity = '0';
      setTimeout(() => toast.remove(), 500);
    }
  }, 5000);

  // Ręczne zamknięcie toast
  document.addEventListener('click', function(e) {
    if (e.target.classList.contains('close-toast') || e.target.closest('.close-toast')) {
      const toast = e.target.closest('.toast-message');
      if (toast) {
        toast.style.transition = 'opacity 0.3s ease-out';
        toast.style.opacity = '0';
        setTimeout(() => toast.remove(), 300);
      }
    }
  });
</script>
