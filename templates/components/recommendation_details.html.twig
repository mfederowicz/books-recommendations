<div class="space-y-8">
  <!-- Informacje o rekomendacji -->
  <div class="bg-gradient-to-r from-indigo-50 to-blue-50 rounded-xl p-6 border border-indigo-100">
    <h4 class="font-bold text-gray-900 mb-3 text-lg">{{ 'dashboard.recommendation_info'|trans }}</h4>
    <p class="text-gray-700 text-base leading-relaxed">{{ recommendation.shortDescription }}</p>
    <div class="mt-4 flex flex-wrap gap-2">
      {% for tag in recommendation.tags %}
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
          {{ tag.name }}
        </span>
      {% endfor %}
    </div>
    <div class="mt-4 flex flex-wrap gap-4 text-sm text-gray-600">
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        {{ 'dashboard.created'|trans }}: {{ recommendation.createdAt|date('M j, Y H:i') }}
      </div>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        {{ 'dashboard.last_updated'|trans }}: {{ recommendation.lastSearchAt ? recommendation.lastSearchAt|date('M j, Y H:i') : 'dashboard.never'|trans }}
      </div>
    </div>
  </div>

  <!-- Lista znalezionych książek -->
  <div>
    <div class="flex items-center justify-between mb-6">
      <h4 class="font-bold text-gray-900 text-xl">{{ 'dashboard.found_books'|trans }}</h4>
      <span class="bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-sm font-medium">{{ books|length }} książek</span>
    </div>

    {% if books is empty %}
      <div class="text-center py-8 text-gray-500">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        <p>{{ 'dashboard.no_books_found'|trans }}</p>
      </div>
    {% else %}
      <div class="grid gap-6 md:grid-cols-2">
        {% for result in books %}
          {% set book = result.ebook %}
          <div class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-lg hover:border-indigo-300 transition-all duration-200">
            <!-- Okładka książki - wyśrodkowana na górze -->
            <div class="flex justify-center mb-4">
              {% set coverUrl = book_cover_url(book.isbn, book.title, book.author) %}
              {% set comparisonUrl = book_comparison_url(book.isbn, book.title, book.author) %}
              {% if coverUrl and comparisonUrl %}
                <a href="{{ comparisonUrl }}" target="_blank" rel="noopener noreferrer" class="block transition-transform hover:scale-105">
                  <picture>
                    <source type="image/avif" srcset="{{ coverUrl|replace({'.jpg': '.avif'}) }}">
                    <img fetchpriority="high" itemprop="image" type="image/jpeg" src="{{ coverUrl }}" srcset="{{ coverUrl }} 1x, {{ coverUrl|replace({'/big/': '/small/'}) }} 1x" title="E-book: {{ book.title }} - {{ book.author }}" alt="Okładka: {{ book.title }}" width="164" height="250" class="w-24 h-32 object-cover rounded-lg border shadow-sm cursor-pointer">
                  </picture>
                </a>
              {% elseif coverUrl %}
                <picture>
                  <source type="image/avif" srcset="{{ coverUrl|replace({'.jpg': '.avif'}) }}">
                  <img fetchpriority="high" itemprop="image" type="image/jpeg" src="{{ coverUrl }}" srcset="{{ coverUrl }} 1x, {{ coverUrl|replace({'/big/': '/small/'}) }} 1x" title="E-book: {{ book.title }} - {{ book.author }}" alt="Okładka: {{ book.title }}" width="164" height="250" class="w-24 h-32 object-cover rounded-lg border shadow-sm">
                </picture>
              {% else %}
                <div class="w-24 h-32 bg-gray-200 rounded-lg border flex items-center justify-center shadow-sm">
                  <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                </div>
              {% endif %}
            </div>

            <!-- Szczegóły książki -->
            <div class="text-center">
              <h5 class="font-bold text-gray-900 text-base mb-1 line-clamp-2 leading-tight">{{ book.title }}</h5>
              <p class="text-sm text-gray-600 mb-3">{{ 'dashboard.by'|trans }} {{ book.author }}</p>

              <!-- Tagi książki -->
              {% if book.tags %}
                <div class="mb-3 flex flex-wrap gap-1 justify-center">
                  {% for tag in book.tags|split(',')|slice(0, 2) %}
                    {% if tag|trim %}
                      <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-indigo-50 text-indigo-700">
                        {{ tag|trim }}
                      </span>
                    {% endif %}
                  {% endfor %}
                  {% if book.tags|split(',')|length > 2 %}
                    <span class="text-xs text-gray-500">+{{ (book.tags|split(',')|length - 2) }}</span>
                  {% endif %}
                </div>
              {% endif %}

              <!-- Współczynnik podobieństwa -->
              <div class="pt-2 border-t border-gray-100">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {{ 'dashboard.similarity'|trans }}: {{ (result.similarityScore * 100)|round(1) }}%
                </span>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

