{% extends 'base.html.twig' %}

{% block title %}Dashboard - Books Recommender{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
  <!-- Formularz rekomendacji (sticky na górze) -->
  <div class="sticky top-0 bg-white shadow-sm border-b z-10">
    <div class="max-w-4xl mx-auto p-6">
      <div class="bg-white rounded-lg shadow-sm border p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Find your next book</h2>
        <p class="text-gray-600 mb-6">Describe the book you want to read (30-500 characters)</p>

        <form method="post" class="space-y-4">
          <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
              Book Description
            </label>
            <div class="flex gap-3 max-w-full">
              <textarea
                id="description"
                name="description"
                rows="4"
                class="flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="E.g. A fascinating science fiction novel about time travel, where the protagonist discovers a way to change the past but must face paradoxes and the consequences of his decisions..."
                minlength="30"
                maxlength="500"
                required
              ></textarea>
            </div>
            <p class="mt-1 text-sm text-gray-500">
              <span id="char-count">0</span>/500 characters
            </p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Select tags <span class="text-red-500">*</span> (minimum 2)
            </label>
            <div class="flex flex-wrap gap-2" id="tag-container">
              <!-- Tags will appear here -->
            </div>
            <div class="mt-2 max-w-full">
              <div class="flex gap-3 items-end relative">
                <div class="flex-1 relative">
                  <input
                    type="text"
                    id="tag-input"
                    name="q"
                    class="h-11 w-full px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 flex items-center"
                    placeholder="Type a tag and press Enter..."
                    hx-get="/api/tags"
                    hx-target="#tag-suggestions"
                    hx-trigger="input changed delay:300ms"
                    hx-include="[name='q']"
                  >
                  <div id="tag-loading" class="htmx-indicator absolute right-3 top-3">
                    <svg class="animate-spin h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                  </div>
                </div>
              <button
                type="button"
                class="h-11 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 whitespace-nowrap flex items-center justify-center"
                id="reset-btn"
              >
                Reset
              </button>
              <button
                type="submit"
                class="h-11 inline-flex items-center justify-center px-6 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 disabled:cursor-not-allowed whitespace-nowrap"
                id="submit-btn"
                disabled
              >
                  <svg class="animate-spin -ml-1 mr-3 h-4 w-4 text-white hidden" id="loading-spinner" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Find Recommendations
                </button>
              </div>
              <div id="tag-suggestions" class="z-30 bg-white border border-gray-300 rounded-md shadow-lg max-h-60 overflow-y-auto hidden" style="margin-top: 4px;">
                <!-- Suggestions will appear here -->
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Lista rekomendacji użytkownika -->
  <div class="max-w-4xl mx-auto p-6">
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Your Recommendations</h2>
      <p class="text-gray-600 mt-1">List of books found based on your descriptions</p>
    </div>

    <!-- Placeholder dla rekomendacji -->
    <div class="bg-white rounded-lg shadow-sm border p-8 text-center">
      <div class="text-gray-400 mb-4">
        <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No recommendations yet</h3>
      <p class="text-gray-500">Add a book description above to get personalized recommendations.</p>
    </div>
  </div>
</div>

<script>
// Liczenie znaków w textarea
document.getElementById('description').addEventListener('input', function() {
  const count = this.value.length;
  document.getElementById('char-count').textContent = count;

  validateForm();
});

// Funkcja walidacji formularza
function validateForm() {
  const descriptionTextarea = document.getElementById('description');
  const tagContainer = document.getElementById('tag-container');
  const submitBtn = document.getElementById('submit-btn');

  const descriptionLength = descriptionTextarea.value.length;
  const isValidDescription = descriptionLength >= 30 && descriptionLength <= 500;

  const tagCount = tagContainer.children.length;
  const isValidTags = tagCount >= 2;

  submitBtn.disabled = !(isValidDescription && isValidTags);
}

// Funkcjonalność tagów z autocomplete
let currentTagInput = null;

document.getElementById('tag-input').addEventListener('input', function() {
  currentTagInput = this;
  const suggestions = document.getElementById('tag-suggestions');

  if (this.value.trim().length >= 2) {
    suggestions.classList.remove('hidden');
    // Ustaw szerokość dropdown na szerokość inputa
    suggestions.style.width = this.offsetWidth + 'px';
  } else {
    suggestions.classList.add('hidden');
  }
});

// HTMX event listeners
document.addEventListener('htmx:afterRequest', function(evt) {
  if (evt.detail.target.id === 'tag-suggestions') {
    const suggestions = document.getElementById('tag-suggestions');
    // Sprawdź czy odpowiedź zawiera jakieś tagi (nie pusty div)
    const response = evt.detail.xhr.response || '';
    const hasContent = response.trim() !== '' &&
                      !response.includes('<div class="py-1">') ||
                      response.includes('onclick="selectTagSuggestion');

    if (hasContent) {
      suggestions.classList.remove('hidden');
    } else {
      suggestions.classList.add('hidden');
    }
  }
});

document.getElementById('tag-input').addEventListener('keydown', function(e) {
  const suggestions = document.getElementById('tag-suggestions');

  if (e.key === 'Enter') {
    e.preventDefault();
    const tagValue = this.value.trim();
    if (tagValue) {
      addTagBadge(tagValue);
      this.value = '';
      suggestions.classList.add('hidden');
    }
  } else if (e.key === 'Escape') {
    suggestions.classList.add('hidden');
  }
});

// Zamknij sugestie po kliknięciu poza nimi
document.addEventListener('click', function(e) {
  const tagInput = document.getElementById('tag-input');
  const suggestions = document.getElementById('tag-suggestions');

  if (!tagInput.contains(e.target) && !suggestions.contains(e.target)) {
    suggestions.classList.add('hidden');
  }
});

// Funkcja wyboru sugestii tagu
function selectTagSuggestion(tagName) {
  const tagInput = document.getElementById('tag-input');
  const suggestions = document.getElementById('tag-suggestions');

  addTagBadge(tagName);
  tagInput.value = '';
  suggestions.classList.add('hidden');
  tagInput.focus();
}

// Funkcja dodająca badge tagu
function addTagBadge(tagValue) {
  const tagContainer = document.getElementById('tag-container');

  // Sprawdź czy tag już istnieje
  const existingTags = Array.from(tagContainer.children).map(badge =>
    badge.querySelector('span').textContent.toLowerCase()
  );

  if (existingTags.includes(tagValue.toLowerCase())) {
    return; // Tag już istnieje
  }

  // Utwórz badge
  const badge = document.createElement('span');
  badge.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800';
  badge.innerHTML = `
    <span>${tagValue}</span>
    <button type="button" class="ml-1 inline-flex items-center p-0.5 rounded-full text-indigo-400 hover:bg-indigo-200 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
      <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </button>
  `;

  // Dodaj event listener do przycisku usunięcia
  const removeBtn = badge.querySelector('button');
  removeBtn.addEventListener('click', function() {
    badge.remove();
    validateForm();
  });

  tagContainer.appendChild(badge);
  validateForm();
}

// Funkcjonalność przycisku Reset
document.getElementById('reset-btn').addEventListener('click', function() {
  // Wyczyść textarea
  const descriptionTextarea = document.getElementById('description');
  descriptionTextarea.value = '';

  // Wyczyść input tagów
  const tagInput = document.getElementById('tag-input');
  tagInput.value = '';

  // Wyczyść kontener tagów (usuń wszystkie badge)
  const tagContainer = document.getElementById('tag-container');
  tagContainer.innerHTML = '';

  // Zresetuj licznik znaków
  document.getElementById('char-count').textContent = '0';

  // Zresetuj walidację formularza
  validateForm();

  // Zresetuj focus na textarea
  descriptionTextarea.focus();
});
</script>
{% endblock %}