{% extends 'base.html.twig' %}

{% block title %}Auth Debug - {{ parent() }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto bg-white p-6 rounded-lg shadow">
    <h1 class="text-2xl font-bold mb-6 text-red-600">ğŸ” Authentication Debug Information</h1>

    <div class="space-y-6">
        <!-- User Information -->
        <div class="border rounded p-4">
            <h2 class="text-lg font-semibold mb-3 text-blue-600">ğŸ‘¤ User Information</h2>
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-2">
                <dt class="font-medium">getUser() result:</dt>
                <dd class="font-mono text-sm">{{ debug.user_from_getUser ?: 'null' }}</dd>

                <dt class="font-medium">app.user result:</dt>
                <dd class="font-mono text-sm">{{ debug.user_from_app ?: 'null' }}</dd>

                <dt class="font-medium">Is authenticated:</dt>
                <dd class="font-mono text-sm {{ debug.is_authenticated ? 'text-green-600' : 'text-red-600' }}">
                    {{ debug.is_authenticated ? 'YES' : 'NO' }}
                </dd>
            </dl>
        </div>

        <!-- Token Information -->
        <div class="border rounded p-4">
            <h2 class="text-lg font-semibold mb-3 text-green-600">ğŸ« Security Token</h2>
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-2">
                <dt class="font-medium">Token exists:</dt>
                <dd class="font-mono text-sm {{ debug.token_exists ? 'text-green-600' : 'text-red-600' }}">
                    {{ debug.token_exists ? 'YES' : 'NO' }}
                </dd>

                <dt class="font-medium">Token class:</dt>
                <dd class="font-mono text-sm">{{ debug.token_class ?: 'null' }}</dd>

                <dt class="font-medium">Token user:</dt>
                <dd class="font-mono text-sm">{{ debug.token_user ?: 'null' }}</dd>
            </dl>
        </div>

        <!-- Session Information -->
        <div class="border rounded p-4">
            <h2 class="text-lg font-semibold mb-3 text-purple-600">ğŸ’¾ Session Data</h2>
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-2 mb-4">
                <dt class="font-medium">Session ID:</dt>
                <dd class="font-mono text-sm">{{ debug.session_id }}</dd>
            </dl>

            <h3 class="font-medium mb-2">Session Contents:</h3>
            <pre class="bg-gray-100 p-3 rounded text-xs overflow-x-auto">{{ debug.session_data|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
        </div>

        <!-- Request Information -->
        <div class="border rounded p-4">
            <h2 class="text-lg font-semibold mb-3 text-orange-600">ğŸŒ Request Information</h2>

            <h3 class="font-medium mb-2">Server Variables:</h3>
            <pre class="bg-gray-100 p-3 rounded text-xs overflow-x-auto mb-4">{{ debug.server_vars|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>

            <h3 class="font-medium mb-2">Headers:</h3>
            <pre class="bg-gray-100 p-3 rounded text-xs overflow-x-auto mb-4">{{ debug.headers|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>

            <h3 class="font-medium mb-2">Cookies:</h3>
            <pre class="bg-gray-100 p-3 rounded text-xs overflow-x-auto">{{ debug.cookies|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
        </div>
    </div>

    <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded">
        <h3 class="font-semibold text-yellow-800">ğŸ”§ Quick Actions</h3>
        <div class="mt-2 space-x-2">
            <a href="{{ path('homepage') }}" class="bg-blue-500 text-white px-3 py-1 rounded text-sm">Home</a>
            <a href="{{ path('app_login') }}" class="bg-green-500 text-white px-3 py-1 rounded text-sm">Login</a>
            <a href="{{ path('app_logout') }}" class="bg-red-500 text-white px-3 py-1 rounded text-sm">Logout</a>
            <button onclick="location.reload()" class="bg-gray-500 text-white px-3 py-1 rounded text-sm">Refresh</button>
        </div>
    </div>
</div>
{% endblock %}
