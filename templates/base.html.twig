<!DOCTYPE html>
<html lang="{{ app.request.locale|default('pl') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="cache-control" content="no-cache, no-store, must-revalidate">
    <meta name="pragma" content="no-cache">
    <meta name="expires" content="0">
    <title>{% block title %}{{ 'app.title'|trans }}{% endblock %}</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}">

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">

    <!-- HTMX -->
    <script src="{{ asset('js/htmx.min.js') }}"></script>

    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-gray-50 text-gray-900">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="{{ path('homepage') }}" class="text-xl font-semibold text-gray-900 hover:text-indigo-600">
                        ğŸ“š {{ 'app.title'|trans }}
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <!-- Debug link - only visible in dev/test environments -->
                    {% if app.environment in ['dev', 'test'] %}
                    <a href="{{ path('debug_auth') }}" class="text-xs text-blue-600 bg-blue-100 px-2 py-1 rounded mr-2" target="_blank">
                        ğŸ” DEBUG AUTH
                    </a>
                    {% endif %}
                    {% if app.user %}
                        <!-- Zalogowany uÅ¼ytkownik -->
                        <span class="text-gray-700 px-3 py-2 text-sm">
                            {{ 'nav.welcome'|trans({'%email%': app.user.email}) }}
                        </span>
                        <a href="{{ path('app_logout') }}" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                            {{ 'nav.logout'|trans }}
                        </a>
                    {% else %}
                        <!-- Niezalogowany uÅ¼ytkownik -->
                        <a href="{{ path('app_register') }}" class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium">
                            {{ 'nav.register'|trans }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        {% for message in app.flashes('success') %}
            <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                {{ message }}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
            <p class="text-center text-sm text-gray-500">
                {{ 'nav.footer'|trans }}
            </p>
        </div>
    </footer>

    <!-- Custom JavaScript block -->
    <!-- JavaScript moved to individual templates -->
</body>
</html>



